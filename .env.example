# disable next telemetry
NEXT_TELEMETRY_DISABLED=1

# App Configuration
NODE_ENV=development
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://pi:password@localhost:5432/nextboilerplate

# JWT Configuration
# REQUIRED: Must be at least 32 characters long
# Generate with: openssl rand -base64 32
JWT_SECRET=changeme_32+chars
JWT_ACCESS_COOKIE_NAME=__access
JWT_REFRESH_COOKIE_NAME=__session

# Authentication
# Enable email allowlist (default: true)
AUTH_ALLOWLIST_ENABLED=true

# Enable signup for new users (default: true)
# When false, only existing users can sign in
AUTH_SIGNUP_ENABLED=true

# Comma-separated list of allowed email addresses
# Required when AUTH_ALLOWLIST_ENABLED=true
ALLOWED_EMAILS="abc@gmail.com"

# Optional: Comma-separated additional allowed origins for CSRF validation
ALLOWED_ORIGINS="localhost:3000"

# Email Configuration (Resend)
RESEND_API_KEY="resend_abc"
RESEND_EMAIL_DOMAIN="resend.dev"
RESEND_FROM_EMAIL="no-reply@resend.dev"

# Dev Password Sign-in (only works in development)
ENABLE_DEV_PASSWORD_SIGNIN=true
NEXT_PUBLIC_ENABLE_DEV_PASSWORD_SIGNIN=true

# hCaptcha (optional - enables CAPTCHA gating after rate limit thresholds)
HCAPTCHA_ENABLED=false
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# OTP Configuration (tunables)
OTP_EXP_MINUTES=10
OTP_LENGTH=6
BCRYPT_ROUNDS=12

# Dev-only helper (bypasses strength check in set-password route only)
SKIP_PASSWORD_VALIDATION=false

# Seed User (for development and scripts)
# SEED_EMAIL is used by seed scripts (including seed-superadmin.ts)
SEED_EMAIL="abc@gmail.com"
SEED_PASSWORD="Password@123"
SEED_NAME="Nathan"

# AI Provider API Keys (Server-side only)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key-here

# Multi-tenant Configuration
# Enable organization creation for regular users (default: false)
# When false, only superadmins can create organizations
ORG_CREATION_ENABLED=false

# Maximum number of organizations a user can create (default: 1)
# Superadmins bypass this limit
ORG_CREATION_LIMIT=1

# Invitation expiry time in minutes (default: 10080 = 7 days)
INVITE_EXP_MINUTES=10080

# Rate limits for invitations
INVITES_PER_ORG_PER_DAY=20
INVITES_PER_IP_15M=5

# Reserved organization slugs (comma-separated)
ORG_RESERVED_SLUGS="o,api,dashboard,settings,login,invite,onboarding,_next,assets,auth,public"

# Last organization cookie name
LAST_ORG_COOKIE_NAME="__last_org"

# AI Features Configuration
# Enable organization-wide AI features (API key management, generation, usage logs)
AI_FEATURES_ENABLED=false

# Encryption key for storing provider API keys (AES-256-GCM)
# REQUIRED when AI_FEATURES_ENABLED=true
# Generate with: openssl rand -base64 32
APP_ENCRYPTION_KEY=

# Rate limits for AI generation requests
AI_RATE_LIMIT_PER_MIN_ORG=60
AI_RATE_LIMIT_PER_MIN_IP=120

# Allowed AI providers (comma-separated)
AI_ALLOWED_PROVIDERS="openai,gemini,anthropic"